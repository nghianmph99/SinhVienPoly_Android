<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lucifer.QLSV_Poly_AndroidNC.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <ImageView
            android:id="@+id/ivStudent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/icon_student" />

        <ImageView
            android:layout_width="100dp"
            android:id="@+id/ivNew"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/icon_news" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <ImageView
            android:layout_width="100dp"
            android:id="@+id/ivMap"
            android:layout_height="100dp"
            android:background="@drawable/icon_map" />

        <ImageView

            android:layout_width="100dp"
            android:id="@+id/ivSocial"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/icon_social" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>
